{
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "skipLibCheck": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "../lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "removeComments": true,
  },
  "compileOnSave": true,
  "include": [
    "*.ts",
    "*.js",
  ]
}
